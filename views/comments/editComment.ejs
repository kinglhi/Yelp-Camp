<% include ../partials/header %>

<div class="container">
    <h1 style="text-align:center; margin: 25px auto;">Edit comment: </h1>
    <div class="row" style="width:30%; margin:0 auto">
        
        <form action="/campgrounds/<%= campground_id %>/comments/<%= comment._id %>?_method=PUT" method="POST">
            <div class="form-group">
                <input class="form-control" type="text" value="<%= comment.text %>" name="comments[text]">
            </div>
            <div class="form-group">
                <input class="btn btn-lg btn-primary btn-block" type="submit" value="Update">
            </div>
        </form>
        
        <p><a href="/campgrounds"> Go Back </a></p>
    </div>
</div>



<% include ../partials/footer %>