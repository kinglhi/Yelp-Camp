<% include ../partials/header %>

<div class="container">
    <h1 style="text-align:center; margin: 25px auto;">Add new comment to <%= campground.name %></h1>
    <div class="row" style="width:30%; margin:0 auto">
        
        <form action="/campgrounds/<%= campground._id %>/comments" method="POST">
            <div class="form-group">
                <input class="form-control" type="text" placeholder="Text" name="comments[text]">
            </div>
            <div class="form-group">
                <input class="btn btn-lg btn-primary btn-block" type="submit">
            </div>
        </form>
        
        <p><a href="/campgrounds"> Go Back </a></p>
    </div>
</div>



<% include ../partials/footer %>