<% include ../partials/header %>

<div class="container">
    <h1 style="text-align:center; margin: 25px auto;">Create a new Campground</h1>
    <div class="row" style="width:30%; margin:0 auto">
        
        <form action="/campgrounds" method="POST">
            <div class="form-group">
                <input class="form-control" type="text" placeholder="Enter campground name" name="name">
            </div>
            <div class="form-group">
                <input class="form-control" type="text" placeholder="Image url" name="image">
            </div>
            <div class="form-group">
                <input class="form-control" type="text" placeholder="description" name="description">
            </div>
            <div class="form-group">
                <input class="form-control" type="number" placeholder="Price per night" name="price" min="1">
            </div>
            <div class="form-group">
                <input class="btn btn-lg btn-primary btn-block" type="submit">
            </div>
        </form>
        
        <p><a href="/campgrounds"> Go Back </a></p>
    </div>
</div>

<% include ../partials/footer%>